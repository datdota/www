{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
  "exclude": [
    "node_modules",
    "**/__tests__/*.*",
    "**/__fixtures__/**/*.*"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": true,
    "isolatedModules": true,
    // Always include these settings
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    /* Basic Options */
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext", // adds support for ESNext functionality
      "DOM" // adds support for 'window' other dom methods
    ],
    "allowJs": true,
    /* JSX support */
    "jsx": "preserve",
    "declaration": true,
    /* Strict Type-Checking Options */
    "strict": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "strictFunctionTypes": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "incremental": true
  }
}
